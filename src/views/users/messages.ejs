<h2><%= userName %>のメッセージ一覧</h2>

<div class="messages-area">
  <div class="form-container">
    <div class="room-info-form">
      <div class="input-button-container">
        <input v-model="url" type="text" placeholder="suumoのURLを貼り付けてください" />
        <button @click="fetchRoomInfo" class="room-info-button">取得</button>
      </div>
      <div v-if="roomInfoError" class="room-info-error">
        <span>{{ roomInfoError }}</span>
      </div>
    </div>

    <div class="send-message-form">
      <form action="/users/<%= userId %>/messages" method="post">
        <textarea v-model="newMessage" name="message" type="text" placeholder="LINEにメッセージ送信"></textarea>
        <button type="submit" class="send-message-button">送信</button>
      </form>
    </div>
    <% if (errorMessage) { %>
      <div class="error-message">
        <span><%= errorMessage %></span>
      </div>
    <% } %>
  </div>

  <% messages.forEach(message => { %>
    <div class="messages-container">
      <% if (message.isFromUser) { %>
        <p class="user-message"><%= userName %>: <%= message.content %></p>
      <% } else { %>
        <p class="admin-message"><%= message.content %></p>
      <% } %>
    </div>
  <% }) %>
</div>
